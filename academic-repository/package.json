{
  "name": "academic-blockchain-repository",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"contracts/**/*.sol\" \"prisma/**/*.prisma\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"contracts/**/*.sol\" \"prisma/**/*.prisma\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "lint:staged": "lint-staged",
    "setup:hooks": "git config core.hooksPath academic-repository/.githooks",
    "prepare": "node -e \"console.log('Pre-commit hooks live in academic-repository/.githooks â€“ run npm run setup:hooks if Git hooks stop working.');\"",
    "verify:staging": "ts-node --project tsconfig.hardhat.json scripts/verify-staging.ts",
    "verify:staging:record": "ts-node --project tsconfig.hardhat.json scripts/verify-staging-record.ts",
    "data:sync": "ts-node --project tsconfig.hardhat.json scripts/sync-events.ts",
    "lint:security": "eslint --config .eslintrc.security.js --ext .ts,.tsx src",
    "security:contracts": "docker run --rm -v \"$PWD\":/workspace trailofbits/eth-security-toolbox slither .",
    "storacha:secrets": "ts-node --project tsconfig.hardhat.json scripts/storacha-secrets.ts",
    "storacha:bootstrap": "ts-node --project tsconfig.hardhat.json scripts/storacha-bootstrap.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@figma/code-connect": "^1.3.7",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@rainbow-me/rainbowkit": "^2.1.1",
    "@reown/appkit": "^1.8.10",
    "@reown/appkit-adapter-solana": "^1.8.10",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/web3.js": "^1.98.4",
    "@storacha/client": "^1.8.2",
    "@tanstack/react-query": "^5.46.0",
    "@ucanto/principal": "^9.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express-rate-limit": "^6.11.2",
    "framer-motion": "^11.2.6",
    "lru-cache": "^10.2.0",
    "lucide-react": "^0.548.0",
    "next": "14.2.5",
    "next-intl": "^3.13.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.9.5",
    "wagmi": "^2.10.7",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.13",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/node": "20.14.9",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-security": "^3.0.1",
    "hardhat": "^2.26.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "8.4.38",
    "prettier": "3.3.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-solidity": "^2.1.0",
    "prisma": "^6.17.1",
    "solhint": "^3.6.2",
    "tailwindcss": "3.4.7",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5"
  },
  "overrides": {
    "@coinbase/wallet-sdk": "4.3.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --fix"
    ],
    "*.{ts,tsx,js,jsx,css,md,json,sol,prisma}": [
      "prettier --write"
    ]
  }
}
