{
  "name": "academic-blockchain-repository",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"contracts/**/*.sol\" \"prisma/**/*.prisma\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"contracts/**/*.sol\" \"prisma/**/*.prisma\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint:staged": "lint-staged",
    "setup:hooks": "git config core.hooksPath academic-repository/.githooks",
    "prepare": "node -e \"console.log('Pre-commit hooks live in academic-repository/.githooks â€“ run `npm run setup:hooks` if Git hooks stop working.');\""
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.3",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@prisma/client": "^6.17.1",
    "@rainbow-me/rainbowkit": "^2.1.1",
    "@tanstack/react-query": "^5.46.0",
    "framer-motion": "^11.2.6",
    "next": "14.2.5",
    "next-intl": "^3.13.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "viem": "^2.9.5",
    "wagmi": "^2.10.7",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/node": "20.14.9",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "hardhat": "^2.22.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "8.4.38",
    "prettier": "3.3.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-solidity": "^2.1.0",
    "prisma": "^6.17.1",
    "solhint": "^3.6.2",
    "tailwindcss": "3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5"
  },
  "overrides": {
    "@coinbase/wallet-sdk": "4.3.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --fix"
    ],
    "*.{ts,tsx,js,jsx,css,md,json,sol,prisma}": [
      "prettier --write"
    ]
  }
}
