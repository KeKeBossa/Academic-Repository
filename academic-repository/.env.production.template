# Copy this file to `.env.production` and fill in the real values before deploying.

# Database
DATABASE_URL=<PRODUCTION_DATABASE_URL>

# Frontend environment
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=<WALLETCONNECT_PROJECT_ID>
NEXT_PUBLIC_POLYGON_AMOY_RPC_URL=<POLYGON_AMOY_RPC_URL>
NEXT_PUBLIC_SEPOLIA_RPC_URL=<SEPOLIA_RPC_URL>

# Backend / Hardhat
SEPOLIA_RPC_URL=<SEPOLIA_RPC_URL>
SEPOLIA_PRIVATE_KEY=<SEPOLIA_PRIVATE_KEY>
POLYGON_AMOY_RPC_URL=<POLYGON_AMOY_RPC_URL>
POLYGON_AMOY_PRIVATE_KEY=<POLYGON_AMOY_PRIVATE_KEY>
ETHERSCAN_API_KEY=<ETHERSCAN_API_KEY>
POLYGONSCAN_API_KEY=<POLYGONSCAN_API_KEY>
GOVERNOR_TIMELOCK_DELAY=3600
GOVERNOR_VOTING_DELAY_BLOCKS=1
GOVERNOR_VOTING_PERIOD_BLOCKS=7200
GOVERNOR_PROPOSAL_THRESHOLD=10
GOVERNOR_QUORUM_FRACTION=10
GOVERNANCE_DEFAULT_ADMINS=<DAO_ADMIN_WALLETS>
GOVERNANCE_DEFAULT_PROPOSERS=<DAO_PROPOSERS>
GOVERNANCE_DEFAULT_EXECUTORS=<DAO_EXECUTORS>

# Security
VC_ENCRYPTION_SECRET=<GENERATE_STRONG_SECRET>
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Collaboration filters (example: DAO-specific keyword/skill tuning)
COLLABORATION_FILTER_DEFAULT_Q=
COLLABORATION_FILTER_DEFAULT_SKILL=
COLLABORATION_FILTER_DEFAULT_AUTHOR=

# Web3 Services
WEB3_STORAGE_TOKEN=<WEB3_STORAGE_TOKEN>
WEB3_STORAGE_ENDPOINT=https://api.web3.storage/upload
ARTIFACT_REGISTRY_ADDRESS=<ARTIFACT_REGISTRY_ADDRESS>
ARTIFACT_REGISTRY_PRIVATE_KEY=<ARTIFACT_REGISTRY_SIGNER>
ARTIFACT_REGISTRY_RPC_URL=<FINAL_RPC_URL>
CREDENTIAL_ANCHOR_ADDRESS=<CREDENTIAL_ANCHOR_ADDRESS>
CREDENTIAL_ANCHOR_RPC_URL=<FINAL_RPC_URL>

# Data sync
EVENT_SYNC_FROM_BLOCK=<START_BLOCK_NUMBER>

# Deployment helpers
STAGING_MODE=

# Optional integrations
SUPABASE_URL=<SUPABASE_URL>
SUPABASE_ANON_KEY=<SUPABASE_ANON_KEY>
SUPABASE_SERVICE_ROLE_KEY=<SUPABASE_SERVICE_ROLE>
